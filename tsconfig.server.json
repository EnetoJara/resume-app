{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "types": [
            "node",
        ],
        "baseUrl": "./node_modules",
        "rootDir": "./src",
        "outDir": "./dist",
        "paths": {
            "*": [
                "./*",
                "../src/types/",
                "../typings/"
            ]
        },

    },
    "exclude": [
        "node_modules",
        "public",
        "dist",
        "config",
        "mocha",
        "src/client/**",
    ],
    "include": [
        "src/server/*.ts",
        "src/server/**/*.ts",
        "src/server/**/**/.ts",
        "src/server/**/**/**/*.ts",
        "src/server/**/**/**/**/*.ts",
        "src/server/**/**/**/**/**/*.ts",
        "src/types"
    ]
}
